@inject ExpandedStates ExpandedStates

<MudCard Style="background-color: #EEF0F2;" Class="variable_width" Elevation="5" id="@skillData.Key">
  <MudStack Class="pa-4" Spacing="0">
    <MudStack Row="true" Justify="Justify.SpaceBetween" Wrap="Wrap.Wrap">
      <MudStack Spacing="0">
        <MudText Color=Color.Primary Typo="Typo.h3">@skillData.SkillName</MudText>
        <MudText Typo="Typo.subtitle2" Class="pl-4">@skillData.Subtitle</MudText>
      </MudStack>
      <MudImage Src="@skillData.ImageUrl" Style="max-width: 8vw; max-height: 8vh;" ObjectFit="ObjectFit.Contain"/>
    </MudStack>
    @if (skillData.SkillExperiences[0].Text != "na")
    {
      <MudText Typo="Typo.body1"> Experiences </MudText>
      @foreach (HyperLink item in skillData.SkillExperiences)
        {
          <AnchorLink Typo="Typo.subtitle1" Href="@item.Link" Color="Color.Primary" Class="pl-4" Disabled="@Disabled">
            @item.Text
          </AnchorLink>
        }
    }

    @if (skillData.SkillProjects[0].Text != "na")
    {
      <MudText Typo="Typo.body1"> Projects </MudText>
      @foreach (HyperLink item in skillData.SkillProjects)
        {
          <AnchorLink Typo="Typo.subtitle1" Href="@item.Link" Color="Color.Primary" Class="pl-4" Disabled="@Disabled">
            @item.Text
          </AnchorLink>
        }
    }
  </MudStack>
</MudCard>


@code {
  [Parameter]
  public required Skill skillData {get; set;}

  [Parameter]
  public bool Disabled {get; set;}

  [Parameter]
  public EventCallback<string> OnLinkClick { get; set;}

  private async Task HandleLinkClick(string data)
  {
    await OnLinkClick.InvokeAsync(data);
  }

}