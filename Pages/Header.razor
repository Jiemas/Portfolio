@inject NavigationManager NavManager

<MudAppBar 
  Elevation="1" 
  Color="Color.Primary" 
  Gutters="false" 
  Class="px-md-20 px-sm-10 px-5 py-1 py-sm-0"
  Fixed="false" 
>
    <MudText Class="p-0 header_disappear" Typo="Typo.h5" Color="Color.Secondary">Jiemas Rubio</MudText>
    <div class="flex-grow-1 header_disappear" />
    <MudLink Typo="Typo.h5" Color="Color.Secondary" Class="ml-3 header_text_swap_disappear" Href="@(relativePath + "#AboutMe")">About Me</MudLink>
    <MudLink Typo="Typo.h5" Color="Color.Secondary" Class="ml-3 header_text_swap_appear" Href="@(relativePath + "#AboutMe")">About</MudLink>
    <MudLink Typo="Typo.h5" Color="Color.Secondary" Class="ml-3" Href="@(relativePath + "#Skills")">Skills</MudLink>
    <MudLink Typo="Typo.h5" Color="Color.Secondary" Class="ml-3 header_text_swap_disappear" Href="@(relativePath + "#Experience")">Experience</MudLink>
    <MudLink Typo="Typo.h5" Color="Color.Secondary" Class="ml-3 header_text_swap_appear" Href="@(relativePath + "#Experience")">Work</MudLink>
    <MudLink Typo="Typo.h5" Color="Color.Secondary" Class="ml-3" Href="@(relativePath + "#Projects")">Projects</MudLink>
    <MudHidden>
      <MudLink Typo="Typo.h5" Color="Color.Secondary" Class="ml-3" Href="@(relativePath + "#Contact")">Contact</MudLink>
    </MudHidden>
</MudAppBar>

@code {
  [Parameter]
  public List<string> Links { get; set; } = [];

  private string relativePath = null!;
  protected override void OnInitialized()
  {
      relativePath = NavManager.ToBaseRelativePath(NavManager.Uri).Split("#")[0];
  }
}